@{
  Layout = "_Layout";
}
<link rel="stylesheet" href="~/css/index.css">

@using HairSalon.Models;

<h1>Stylists</h1>

<div class="container list">
  @if (@Model.Count == 0)
  {
    <h3>No stylists have been added yet!</h3>
  } 
      @foreach(Stylist stylist in Model)
    {
      <li><span class="stylists">@stylist.Name</span></li>
    }
</div>


<div class="container buttons">
  <button class="btn btn-outline-info clientNew">@Html.ActionLink("Add new client", "Create", "Clients")</button>
  <button class="btn btn-outline-info stylistNew">@Html.ActionLink("Add new stylist", "Create")</button>
  <button class="btn btn-outline-info home">@Html.ActionLink("Home", "Index", "Home")</button>
</div>
