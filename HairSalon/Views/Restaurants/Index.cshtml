@{
  Layout = "_Layout";
}
<link rel="stylesheet" href="~/css/index.css">

@using HairSalon.Models;
@model List<HairSalon.Models.Client>;

<h1>Clients</h1>

<div class="container list">
  @if (@Model.Count == 0)
  {
    <h3>No clients have been added yet!</h3>
  } 

  @foreach (Client client in Model)
  {
    <li>@Html.ActionLink($"{client.Name}", "Details", new { id = client.ClientId }) | @client.Stylist.Name</li>
  }
</div>


<div class="container buttons">
  <button class="btn btn-outline-info clientNew">@Html.ActionLink("Add new client", "Create")</button>
  <button class="btn btn-outline-info stylistNew">@Html.ActionLink("Add new stylist", "Create", "Stylists")</button>
  <button class="btn btn-outline-info home">@Html.ActionLink("Home", "Index", "Home")</button>
</div>
