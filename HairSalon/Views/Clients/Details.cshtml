@{
  Layout = "_Layout";
}
<link rel="stylesheet" href="~/css/details.css">

@model HairSalon.Models.Client

<h1>Client Details</h1>
<hr />
<h1>@Html.DisplayFor(model => model.Name)</h1>
<p>@Html.DisplayNameFor(model => model.Visits): @Html.DisplayFor(model => model.Visits)</p>
<p>Stylist: @Html.DisplayFor(model => model.Stylist.Name)</p>

<button class="btn btn-outline-info home">@Html.ActionLink("Edit Client", "Edit", new { id = Model.ClientId })</button>
<button class="btn btn-outline-info middle">@Html.ActionLink("Delete Client", "Delete", new { id = Model.ClientId })</button>
<button class="btn btn-outline-info home">@Html.ActionLink("Back to list", "Index")</button>